<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/shop"
        android:layout_width="297dp"
        android:layout_height="200dp"
        app:backgroundTint="@null"
        android:background="@drawable/main_button2"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:backgroundTint="@color/lavender"
        android:text="Shop"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/dark_blue"
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/split"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top_Layout"
        android:elevation="20dp"
        />

    <Button
        android:id="@+id/split"
        android:layout_width="297dp"
        android:layout_height="200dp"
        app:backgroundTint="@null"
        android:background="@drawable/main_button"
        android:backgroundTint="@color/dark_orange"
        android:fontFamily="@font/quicksand_bold"
        android:text="Split"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/dark_blue"
        android:textSize="50dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Bottom_Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/Bottom_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_panel"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:backgroundTint="@color/green_nu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="20dp"
        >

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:tint="@color/dark_blue"
            app:srcCompat="@drawable/home"
            android:elevation="10dp"

            />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="10dp"
            android:layout_toEndOf="@+id/icon1"
            app:tint="@color/dark_blue"
            app:srcCompat="@drawable/notes" />
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:tint="@color/dark_blue"
            android:layout_toEndOf="@+id/icon2"
            app:srcCompat="@drawable/bill"
            android:elevation="10dp"
            />
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:tint="@color/dark_blue"
            android:layout_toEndOf="@+id/icon3"
            app:srcCompat="@drawable/settings"
            android:elevation="10dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Top_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/shape_login_panel"
        android:backgroundTint="@color/green_nu"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        >

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="230dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            app:tint="@color/dark_blue"
            app:srcCompat="@drawable/logoresize" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/bg"
        android:layout_width="407dp"
        android:layout_height="414dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg"
        app:tint="#4B272727"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="406dp"
        android:layout_height="406dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg"
        app:tint="#4B272727"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>