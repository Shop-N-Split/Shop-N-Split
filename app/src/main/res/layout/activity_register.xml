<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mustard"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="338dp"
        android:layout_height="455dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/shape_login_panel"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"
        >



    </LinearLayout>

    <ImageView
        android:id="@+id/eye"

        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toEndOf="@+id/confirmPass"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/invisible"
        app:layout_constraintBottom_toBottomOf="@+id/confirmPass"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/confirmPass"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:tint="@color/blue_nu" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="60dp"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/blue_nu"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:textSize="14dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/quicksand_semibold"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/blue_nu"
        android:backgroundTint="@color/blue_li"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"

        />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:textSize="14dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/quicksand_semibold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/blue_nu"
        android:backgroundTint="@color/blue_li"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/password"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:textSize="14dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/quicksand_semibold"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/blue_nu"
        android:backgroundTint="@color/blue_li"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />


    <EditText
        android:id="@+id/confirmPass"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:layout_marginTop="14dp"
        android:layout_marginLeft="24dp"
        android:backgroundTint="@color/blue_li"
        android:fontFamily="@font/quicksand_semibold"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/blue_nu"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/registerButton"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="center"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@color/orange"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/confirmPass" />
</androidx.constraintlayout.widget.ConstraintLayout>