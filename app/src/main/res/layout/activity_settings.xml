            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp">

                <ImageView
                    android:id="@+id/faqIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/round_back_security"
                    android:backgroundTint="@color/orange"
                    android:padding="12dp"
                    android:src="@drawable/password"
                    app:tint="@color/blue_nu"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow_icon"
                    app:tint="@color/blue_nu"/>

                <Button
                    android:id="@+id/pass_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"

                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginEnd="26dp"
                    android:layout_toEndOf="@+id/faqIcon"
                    android:fontFamily="@font/quicksand_bold"
                    android:stateListAnimator="@null"
                    android:text="Update Password"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_nu"
                    android:textSize="18dp"
                    app:backgroundTint="#FAC55B" />

            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp">

                    <ImageView
                        android:id="@+id/aboutUsIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/round_back_security"
                        android:backgroundTint="@color/orange"
                        android:padding="12dp"
                        android:src="@drawable/contact"
                        app:tint="@color/blue_nu"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="@color/blue_nu"/>

                    <Button
                        android:id="@+id/contacts_butt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"

                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/aboutUsIcon"
                        android:fontFamily="@font/quicksand_bold"
                        android:stateListAnimator="@null"
                        android:text="Display Contacts"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_nu"
                        android:textSize="18dp"
                        app:backgroundTint="#FAC55B" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp">

                    <ImageView
                        android:id="@+id/premiumicon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/round_back_security"
                        android:backgroundTint="@color/orange"
                        android:padding="12dp"
                        android:src="@drawable/dollar"
                        app:tint="@color/blue_nu"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="@color/blue_nu"/>

                    <Button
                        android:id="@+id/premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/premiumicon"
                        android:fontFamily="@font/quicksand_bold"
                        android:stateListAnimator="@null"
                        android:text="Premium"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_nu"
                        android:textSize="18dp"
                        app:backgroundTint="#FAC55B" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp">

                    <ImageView
                        android:id="@+id/Toc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/round_back_security"
                        android:backgroundTint="@color/orange"
                        android:padding="12dp"
                        android:src="@drawable/toc"
                        app:tint="@color/blue_nu"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="@color/blue_nu"/>

                    <Button
                        android:id="@+id/tocbut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/Toc"
                        android:fontFamily="@font/quicksand_bold"
                        android:stateListAnimator="@null"
                        android:text="Terms and conditions"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_nu"
                        android:textSize="16dp"
                        app:backgroundTint="#FAC55B" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp">

                    <ImageView
                        android:id="@+id/logOutIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/round_back_security"
                        android:backgroundTint="@color/blue_nu"
                        android:padding="12dp"
                        android:src="@drawable/logout_icon"
                        app:tint="@color/white"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="@color/blue_nu"/>

                    <Button
                        android:id="@+id/logout_butt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/logOutIcon"
                        android:fontFamily="@font/quicksand_bold"
                        android:stateListAnimator="@null"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_nu"
                        android:textSize="18dp"
                        app:backgroundTint="#FAC55B" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
