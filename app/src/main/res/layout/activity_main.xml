<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_li"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="339dp"
        android:layout_height="452dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/shape_login_panel"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.289"

        >

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="232dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="Forgot password?"
            android:textColor="@color/blue_nu"
            app:elevation="10dp"

            />

        <!--                <com.google.android.gms.common.SignInButton-->
        <!--                    android:id="@+id/googleSignInButton"-->
        <!--                    android:layout_width="280dp"-->
        <!--                    android:layout_height="42dp"-->
        <!--                    android:layout_alignParentStart="true"-->
        <!--                    android:layout_alignParentEnd="true"-->
        <!--                    android:layout_alignParentBottom="true"-->
        <!--                    android:layout_marginStart="28dp"-->
        <!--                    android:layout_marginTop="14dp"-->
        <!--                    android:layout_marginEnd="23dp"-->
        <!--                    android:layout_marginBottom="22dp"-->
        <!--                    android:fontFamily="@font/quicksand_semibold"-->
        <!--                    android:gravity="center"-->
        <!--                    android:text="Sign in with Google" />-->
        <!--        <com.google.android.gms.common.SignInButton-->
        <!--            android:id="@+id/googleSignInButton"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:visibility="gone" />-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignInButton"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="22dp"
            android:backgroundTint="#FFF"
            android:text="Login With Google"
            android:textColor="@color/blue_nu"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:cornerRadius="30dp"
            android:fontFamily="@font/quicksand_semibold"
            app:icon="@drawable/googleg_standard_color_18"
            app:iconPadding="10dp"
            app:iconTint="#00100D0D"
            app:iconTintMode="src_atop"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/eye"

            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="279dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="276dp"
            app:tint="@color/blue_nu"
            android:src="@drawable/invisible" />



    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="Log In"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:fontFamily="@font/quicksand_medium"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/blue_nu"
        android:backgroundTint="@color/blue_li"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="center"
        android:text="Sign In"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:elevation="20dp"
        app:backgroundTint="@color/blue_li"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/register"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="center"
        android:text="Register"
        app:backgroundTint="@color/blue_li"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:text="or"
        android:textColor="@color/Secondary_green"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/signin" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="40dp"
        android:autofillHints=""
        android:fontFamily="@font/quicksand_semibold"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/blue_nu"
        android:backgroundTint="@color/blue_li"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>